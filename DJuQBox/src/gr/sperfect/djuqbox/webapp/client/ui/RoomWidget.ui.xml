<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:gr.sperfect.djuqbox.webapp.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:north size="3">
				<g:Button styleName="{style.important}" ui:field="button" />
			</g:north>

			<g:north size="15">
				<my:PlayerWidget ui:field='player' />
			</g:north>

			<g:north size="10">
				<my:PlayerControls ui:field='playerControls' />
			</g:north>

			<g:center>
				<g:DecoratedStackPanel width="100%" height="100%">

					<my:SearchSongWidget ui:field='searchSong'
						width="100%" height="100%" g:StackPanel-text="search" />


					<my:PlaylistWidget ui:field="playList" width="100%"
						height="100%" g:StackPanel-text="playlist" />


				</g:DecoratedStackPanel>
			</g:center>
			<g:south size="4">
				<g:Label> test2</g:Label>
			</g:south>

		</g:DockLayoutPanel>

	</g:HTMLPanel>
</ui:UiBinder> 