<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='4'>
			<g:FlowPanel>
				<g:TextBox ui:field="textSearch" width="80%"/>
				<g:Button styleName="{style.important}" ui:field="buttonSearch"
					text="Search" />
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:FlexTable ui:field="searchResults" /><!-- SearchResultsWidget -->
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 