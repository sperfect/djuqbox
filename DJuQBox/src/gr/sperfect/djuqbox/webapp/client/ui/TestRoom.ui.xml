<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:gr.sperfect.djuqbox.webapp.client.ui">
	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>



		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:north size="3">
				<g:Label>logo</g:Label>
			</g:north>

			<g:west size="10">
				<!--<my:PlayerControls ui:field='playerControls' /> -->

				<g:Button styleName="{style.important}" ui:field="button" />
			</g:west>

			<g:center>

				<g:StackLayoutPanel unit="EM" width="100%"
					height="100%" animationDuration="500">
					<g:stack>
						<g:header size='2'>
							search
						</g:header>
						<!-- <my:SearchSongWidget ui:field='searchSong' width="100%" height="100%" 
							/> -->
						<g:Label>searchSong</g:Label>
					</g:stack>
					<g:stack>
						<g:customHeader size='2'>
							<g:Label>playlist</g:Label>
						</g:customHeader>
						<!-- <my:PlaylistWidget ui:field="playList" width="100%" height="100%" 
							/> -->
						<g:Label>playList</g:Label>

					</g:stack>

					<g:stack>
						<g:header size='2'>
							mqttLog
						</g:header>
						<g:ScrollPanel>
							<g:VerticalPanel ui:field='mqttLog' width="100%"
								height="100%" />
						</g:ScrollPanel>
					</g:stack>

					<g:stack>
						<g:header size='2'>
							clientsList
						</g:header>
						<g:VerticalPanel ui:field='clientsList' width="100%"
							height="100%" />
					</g:stack>

				</g:StackLayoutPanel>

			</g:center>
			<!-- <g:south size="1"> <g:Label> footer</g:Label> </g:south> -->
			<g:south size="20">
				<my:PlayerWidget ui:field='player' />
			</g:south>


		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 